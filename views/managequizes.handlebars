        </li>
      {{/each}}
    </ul> -->
    </section>
    <input name="roomid" type="text" size="10" maxlength="10" >
    <p>{{message}}</p>
    <section>
      <input id="startroom" type="submit" value="START" />
      <a href="/create">create</a>
    </section>
  </form>
</main>
